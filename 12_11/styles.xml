<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>
    <style name="Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/dgray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_row">6</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>
</resources>